<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Receiver" Height="200" Width="512">
    <Grid>
        <Button Name="ConnectButton" Content="Connect" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="30" Margin="10" Click="ConnectButton_Click"/>
        <Button Name="ReceiveFileButton" Content="Receive key" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="30" Margin="10,50,0,0" Click="ReceiveFileButton_Click"/>
        <Button x:Name="sendkey" Content="send key" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="30" Margin="10,99,0,0" Click="sendkey_Click" />
    </Grid>
</Window>
